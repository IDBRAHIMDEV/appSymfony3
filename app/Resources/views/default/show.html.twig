{% extends 'base.html.twig' %}

{% block content %}



<section class="hero is-primary is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        {{ post.title }}
      </h1>
      <h2 class="subtitle">
        {{ post.description | slice(0, 100) }}
      </h2>
    </div>
  </div>
</section>

<hr>

<div class="container">
	<div class="columns">
		<div class="column">
			
            
               
               <div class="card">
				  <div class="card-image">
				    <figure class="image">
				     <a href="{{ path('blog-show', {'id' : post.id}) }}">
				         <img src="{{ asset('uploads/posts/' ~ post.image) }}" alt="Placeholder image">
				     </a>
				    </figure>
				  </div>
				  <div class="card-content">
				    

				    <div class="content">
				      <h2 class="title is-2">{{ post.title }}</h2>
				         

				         <p>{{ post.body }}</p>


				      <a href="#">#css</a> <a href="#">#responsive</a>
				      <br>
				      <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
				    </div>
				  </div>
				</div>

            

		</div>
</div>


{% endblock %}

{% block stylesheets %}

{% endblock %}
